{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "CommonJS",
    "allowJs": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "engines/*/bin/*.ts",
    "engines/*/lib/**/*.ts",
    "packages/*/lib/**/*.ts"
  ]
}
