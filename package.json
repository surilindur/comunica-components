{
  "name": "comunica-components",
  "private": true,
  "packageManager": "yarn@4.8.1",
  "description": "Experimental components for Comunica",
  "license": "MIT",
  "repository": "https://github.com/surilindur/comunica-components",
  "workspaces": [
    "engines/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn run build:ts && yarn run build:components && yarn run build:engines",
    "build:components": "componentsjs-generator 'engines/*' 'packages/*'",
    "build:engines": "yarn workspaces foreach --all --include 'engines/*' run prepare",
    "build:engines-browser": "yarn workspaces foreach --all --include 'engines/*' run browser",
    "build:ts": "tsc",
    "clean": "git clean -dfx",
    "lint": "eslint .",
    "test": "yarn jest"
  },
  "devDependencies": {
    "@rdfjs/types": "*",
    "@rubensworks/eslint-config": "^3.0.0",
    "@types/jest": "^29.0.0",
    "componentsjs-generator": "^4.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "@rdfjs/types": "1.1.2",
    "typescript": "5.5.4"
  }
}
